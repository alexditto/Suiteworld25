{
  "name": "suitecloud-project",
  "license": "UNLICENSED",
  "private": true,
  "version": "3.0.0",
  "engines": {
    "node": "22.14.0",
    "npm": "10.9.2"
  },
  "scripts": {
    "build": "npm run build-scripts && npm run build-test",
    "build-scripts": "tsc -p tsconfig.build.json",
    "build-test": "tsc -p tsconfig.tests.json",
    "test": "jest --coverage",
    "lint": "eslint . --ext .ts --max-warnings 0",
    "lint-teamcity": "eslint . --ext .ts --format ./node_modules/eslint-formatter-teamcity/index.js"
  },
  "eslint-formatter-teamcity": {
    "reporter": "inspections",
    "report-name": "ESLint Violations",
    "error-statistics-name": "ESLint Error Count",
    "warning-statistics-name": "ESLint Warning Count"
  },
  "dependencies": {
    "bufferutil": "^4.0.9",
    "canvas": "^3.1.0",
    "suitecloud-unit-testing-stubs": "^1.0.4",
    "utf-8-validate": "^6.0.5"
  },
  "devDependencies": {
    "@hitc/netsuite-types": "^2025.1.11",
    "@oracle/suitecloud-unit-testing": "^1.7.0",
    "@typescript-eslint/eslint-plugin": "^8.27.0",
    "@typescript-eslint/parser": "^8.27.0",
    "eslint": "9.22.0",
    "@eslint/eslintrc": "^3.3.0",
    "eslint-formatter-teamcity": "1.0.0",
    "jest": "^29.7.0",
    "jest-teamcity": "^1.12.0",
    "ts-node": "^10.9.2",
    "typescript": "5.8.2"
  }
}